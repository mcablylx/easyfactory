<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/etResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:hint="结果"
        android:layout_margin="10dp"
        />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@id/btnNum"
            android:tag="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="btnNum"
            />
        <Button
            android:onClick="btnNum"
            android:id="@id/btnNum"
            android:tag="2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2"
            />
        <Button
            android:onClick="btnNum"
            android:id="@id/btnNum"
            android:tag="3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="3"
            />
        <Button
            android:onClick="btnOperate"
            android:id="@id/btnOperate"
            android:tag="+"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="+"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="btnNum"
            android:id="@id/btnNum"
            android:tag="4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="4"
            />
        <Button
            android:onClick="btnNum"
            android:id="@id/btnNum"
            android:tag="5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="5"
            />
        <Button
            android:onClick="btnNum"
            android:id="@id/btnNum"
            android:tag="6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="6"
            />
        <Button
            android:onClick="btnOperate"
            android:id="@id/btnOperate"
            android:tag="-"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="-"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="btnNum"
            android:id="@id/btnNum"
            android:tag="7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="7"
            />
        <Button
            android:onClick="btnNum"
            android:id="@id/btnNum"
            android:tag="8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="8"
            />
        <Button
            android:onClick="btnNum"
            android:id="@id/btnNum"
            android:tag="9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="9"
            />
        <Button
            android:onClick="btnOperate"
            android:id="@id/btnOperate"
            android:tag="x"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="x"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="btnClear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="C"
            />
        <Button
            android:onClick="btnNum"
            android:id="@id/btnNum"
            android:tag="0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="0"
            />
        <Button
            android:onClick="btnGetResult"
            android:id="@id/btnOperate"
            android:tag="="
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="="
            />
        <Button
            android:onClick="btnOperate"
            android:id="@id/btnOperate"
            android:tag="/"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="/"
            />
    </LinearLayout>
</LinearLayout>